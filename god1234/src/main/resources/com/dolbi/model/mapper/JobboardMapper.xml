<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.dolbi.model.mapper.JobboardMapper"><!-- 클래스 또는 인터페이스 역할 -->
	
	<sql id="JobboardColumns">
		J_No,J_TITLE,J_CONTENT,J_REGDATE,J_READCOUNT,J_DELETED,J_SUBTITLE,J_DEADLINE,J_JOINNO,
		J_GENDER,J_AGE,J_EDUCATION,M_ID,J_PAYMENT,J_CAREER
	</sql>
	
	<!-- <resultMap type="com.mvcdemoweb.model.dto.Member" id="memberMap"> -->
	<resultMap type="Jobboard" id="JobboardMap">
		<id property="J_NO" column="J_NO" />
		<result property="email" column="email" />
		<result property="userType" column="userType" />
		<result property="active" column="active" />
		<result property="J_regDate" column="J_regDate" />
	</resultMap>
	<!-- <select id="selectMembers2" resultMap="memberMap">
		SELECT memberId, email, userType, active, regDate 
		FROM JOBBOARD
	</select> -->
	
	<!-- 메서드 역할 -->
	<select id="selectJobboards" resultType="Jobboard">
		SELECT <include refid="JobboardColumns" /> 
		FROM JOBBOARD
	</select>
	
	<insert id="insertJobboard" parameterType="Jobboard">
		INSERT INTO JOBBOARD ( jobboardNo,jobboardTitle, jobboardContent, jobboardDeadLine, jobboardJoinNo, 
		jobboardGender, jobboardAge, jobboardEducation, memberId, jobboardPayment, jobboardCareer)
		VALUES ( #{jobboardNo},#{jobboardTitle}, #{jobboardContent},#{jobboardDeadLine},#{jobboardJoinNo},#{jobboardGender},#{jobboardAge},#{jobboardEducation},#{memberId},#{jobboardPayment},#{jobboardCareer})
	</insert>
	
</mapper>






